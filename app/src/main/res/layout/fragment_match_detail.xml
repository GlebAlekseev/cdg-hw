<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="match"
            type="com.glebalekseevjk.premierleaguefixtures.domain.entity.MatchInfo" />
    </data>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/secondary"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Brentford"
                    android:text="@{match.homeTeam}"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryLabel"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hour_minute_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="21:45"
                    hourMinuteAsText="@{match.dateUtc}"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryLabel"
                    />
                <TextView
                    android:id="@+id/day_month_year_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Понедельник, \n23 Августа 2017"
                    dayMonthYearAsText="@{match.dateUtc}"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/secondaryLabel"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="4"
                        homeTeamScore="@{match.homeTeamScore}"
                        awayTeamScore="@{match.awayTeamScore}"
                        isHome="@{true}"
                        android:background="@color/teal_200"
                        android:padding="15dp"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/primaryLabel"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="vs"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/primaryLabel"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="2"
                        homeTeamScore="@{match.homeTeamScore}"
                        awayTeamScore="@{match.awayTeamScore}"
                        isHome="@{false}"
                        android:padding="15dp"
                        android:background="@color/teal_200"
                        android:textSize="22sp"
                        android:textAlignment="center"
                        android:textColor="@color/primaryLabel"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Brentford Community Stadium"
                    android:text="@{match.location}"
                    android:textSize="22sp"
                    android:layout_marginTop="30dp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryLabel"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Arsenal"
                    android:text="@{match.awayTeam}"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textColor="@color/primaryLabel"
                    />
            </LinearLayout>
        </LinearLayout>
</layout>